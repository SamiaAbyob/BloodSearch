<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"

    android:background="#E60404"
    tools:context=".ThirdActivity">

    <TextView

        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/text3"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"

        />

    <TextView
        android:id="@+id/textViewId1"
        android:layout_below="@+id/text1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="User Name       "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"

        />
    <TextView
        android:id="@+id/usernameShow"
        android:layout_below="@+id/text1"
        android:layout_toRightOf="@+id/textViewId1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        />


    <TextView
        android:id="@+id/textViewId2"
        android:layout_below="@+id/textViewId1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Blood Group    "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/bloodgroupShow"
        android:layout_below="@+id/textViewId1"
        android:layout_toRightOf="@+id/textViewId2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/textViewId3"
        android:layout_below="@+id/textViewId2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Address          "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:id="@+id/addressShow"
        android:layout_below="@+id/textViewId2"
        android:layout_toRightOf="@+id/textViewId3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/textViewId4"
        android:layout_below="@+id/textViewId3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Phone number "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/phonenumberShow"
        android:layout_below="@+id/textViewId3"
        android:layout_toRightOf="@+id/textViewId4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:paddingLeft="20dp"
        android:textColor="#FFFFFF"
        />
    <Button
        android:id="@+id/findbutton"
        android:layout_below="@+id/textViewId4"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Find Blood"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="80dp"
        android:background="#880505"
        android:textColor="#FFFFFF"/>

</RelativeLayout>